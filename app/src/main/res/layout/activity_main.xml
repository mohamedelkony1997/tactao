<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/player1text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/player_1"
        android:textAllCaps="false"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/player1scoretext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="0"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/player1text"
        app:layout_constraintTop_toBottomOf="@+id/player1text"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@id/player1text"
        android:gravity="center"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/player2text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/player_2"
        android:textAllCaps="false"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:background="@drawable/rectangle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/player2scoretext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="0"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textColor="@color/black"

        app:layout_constraintTop_toBottomOf="@+id/player1text"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@id/player2text"
        app:layout_constraintStart_toStartOf="@id/player2text"
        android:gravity="center"
        android:padding="10dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrain2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player1scoretext"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/label7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle2"
            android:gravity="center"
            android:onClick="onplayerclick"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintEnd_toStartOf="@+id/label8"
            app:layout_constraintHeight_percent=".26"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label4"
            app:layout_constraintWidth_percent=".33" />

        <TextView
            android:id="@+id/label8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle2"
            android:gravity="center"
            android:onClick="onplayerclick"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintEnd_toStartOf="@+id/label9"
            app:layout_constraintHeight_percent=".26"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/label7"
            app:layout_constraintTop_toBottomOf="@+id/label5"
            app:layout_constraintWidth_percent=".33" />

        <TextView
            android:id="@+id/label9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle2"
            android:gravity="center"
            android:onClick="onplayerclick"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".26"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/label8"
            app:layout_constraintTop_toBottomOf="@+id/label6"
            app:layout_constraintWidth_percent=".33" />

        <TextView
            android:id="@+id/label3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle2"
            android:gravity="center"
            android:onClick="onplayerclick"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".26"
            app:layout_constraintStart_toEndOf="@+id/label2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".33" />

        <TextView
            android:id="@+id/label2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle2"
            android:gravity="center"
            android:onClick="onplayerclick"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintEnd_toStartOf="@+id/label3"
            app:layout_constraintHeight_percent=".26"
            app:layout_constraintStart_toEndOf="@+id/label1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".33" />

        <TextView
            android:id="@+id/label1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle2"
            android:gravity="center"
            android:onClick="onplayerclick"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintEnd_toStartOf="@+id/label2"
            app:layout_constraintHeight_percent=".26"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".33" />

        <TextView
            android:id="@+id/label4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle2"
            android:gravity="center"
            android:onClick="onplayerclick"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintEnd_toStartOf="@+id/label5"
            app:layout_constraintHeight_percent=".26"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label1"
            app:layout_constraintWidth_percent=".33" />

        <TextView
            android:id="@+id/label5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle2"
            android:gravity="center"
            android:onClick="onplayerclick"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintEnd_toStartOf="@+id/label6"
            app:layout_constraintHeight_percent=".26"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/label4"
            app:layout_constraintTop_toBottomOf="@+id/label2"
            app:layout_constraintWidth_percent=".33" />

        <TextView
            android:id="@+id/label6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rectangle2"
            android:gravity="center"
            android:onClick="onplayerclick"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".26"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/label5"
            app:layout_constraintTop_toBottomOf="@+id/label3"
            app:layout_constraintWidth_percent=".33" />

        <ImageButton
            android:id="@+id/cleartext"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rectangle3"
            android:gravity="center"
            android:onClick="onclearclick"
            android:src="@drawable/agian"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/label8"
            app:layout_constraintStart_toEndOf="@+id/label7"
            app:layout_constraintTop_toBottomOf="@+id/label8"
            app:layout_constraintWidth_percent=".23"
            app:layout_constraintHeight_percent=".15"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>